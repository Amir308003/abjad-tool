            tabs.forEach(tab => tab.classList.remove('active'));
            buttons.forEach(button => button.classList.remove('active'));

            document.getElementById(tabId).classList.add('active');
            document.querySelector(`[onclick="showTab('${tabId}')"]`).classList.add('active');

            if (abjadTypeBox) {
                abjadTypeBox.style.display = tabId === 'text-to-number' ? 'block' : 'none';
            }
        }

        // Ù…Ø­Ø§Ø³Ø¨Ù‡ Ø§Ø¨Ø¬Ø¯ Ø¨Ø±Ø§ÛŒ ØªØ¨ Ø§ÙˆÙ„
        function calculateAbjadFromInput() {
            const textInput = document.getElementById('text-input').value;
            const abjadType = document.getElementById('abjad-type').value;
            let result;
            
            if (abjadType === 'saghir') result = calcSaghir(textInput);
            else if (abjadType === 'vasit') result = calcVasit(textInput);
            else result = calc(textInput);
            
            document.getElementById('abjad-value').textContent = persianizeNumerals(result.n.toString());
            const detailsElement = document.getElementById('calculation-details');
            detailsElement.textContent = result.desc || 'Ù…ØªÙ†ÛŒ ÙˆØ§Ø±Ø¯ Ù†Ø´Ø¯Ù‡ Ø§Ø³Øª';
            
            checkScrollNeeded(detailsElement);
            
            if (!textInput.trim()) {
                document.getElementById('letters-stats-container').innerHTML = '';
                document.getElementById('highlighted-text').innerHTML = '';
                return;
            }
            
            const charStats = countAndSortCharacters(result.cleanChars || textInput);
            displayLetterStats(charStats, 'letters-stats-container', 'highlighted-text');
        }

        // Ù…Ø­Ø§Ø³Ø¨Ù‡ Ù…Ø¹Ú©ÙˆØ³ Ø§Ø¨Ø¬Ø¯ Ø¨Ø±Ø§ÛŒ ØªØ¨ Ø¯ÙˆÙ…
        function calculateReverseFromInput() {
            const numberInputValues = document.getElementById('number-input').value.trim();
            const lines = numberInputValues.split('\n').filter(line => line.trim() !== '');
            
            let allLettersOutput = '';
            let allDescriptionsOutput = '';
            
            if (lines.length === 0) {
                document.getElementById('reverse-result').textContent = 'Ø¹Ø¯Ø¯ÛŒ ÙˆØ§Ø±Ø¯ Ù†Ø´Ø¯Ù‡ Ø§Ø³Øª';
                document.getElementById('reverse-details').textContent = 'Ø¹Ø¯Ø¯ÛŒ ÙˆØ§Ø±Ø¯ Ù†Ø´Ø¯Ù‡ Ø§Ø³Øª';
                return;
            }
            
            lines.forEach(line => {
                const numStr = line.trim();
                if (numStr) {
                    const singleAbjadOutput = revcalc(numStr);
                    allLettersOutput += (singleAbjadOutput.str || `[${numStr}: Ù†Ø§Ù…Ø¹ØªØ¨Ø±]`) + (lines.length > 1 ? '\n' : '');
                    allDescriptionsOutput += (singleAbjadOutput.desc || `[${numStr}: Ø¬Ø²Ø¦ÛŒØ§Øª Ù†Ø§Ù…ÙˆØ¬ÙˆØ¯]`) + (lines.length > 1 ? '\n' : '');
                }
            });
            
            document.getElementById('reverse-result').innerHTML = allLettersOutput.trim().replace(/\n/g, '<br>') || 'Ø¹Ø¯Ø¯ÛŒ ÙˆØ§Ø±Ø¯ Ù†Ø´Ø¯Ù‡ Ø§Ø³Øª';
            document.getElementById('reverse-details').innerHTML = allDescriptionsOutput.trim().replace(/\n/g, '<br>') || 'Ø¬Ø²Ø¦ÛŒØ§ØªÛŒ Ø¨Ø±Ø§ÛŒ Ù†Ù…Ø§ÛŒØ´ ÙˆØ¬ÙˆØ¯ Ù†Ø¯Ø§Ø±Ø¯';
        }

        // Ø±ÙˆÛŒØ¯Ø§Ø¯Ù‡Ø§ÛŒ ØµÙØ­Ù‡
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('text-input').addEventListener('input', calculateAbjadFromInput);
            document.getElementById('number-input').addEventListener('input', calculateReverseFromInput);
            
            document.getElementById('number-input').addEventListener('input', function(e) {
                let value = e.target.value;
                let sanitizedValue = value.replace(/[^\d\n]/g, '');
                if (value !== sanitizedValue) {
                    const selectionStart = e.target.selectionStart;
                    const selectionEnd = e.target.selectionEnd;
                    const diff = value.length - sanitizedValue.length;
                    e.target.value = sanitizedValue;
                    e.target.setSelectionRange(selectionStart - diff, selectionEnd - diff);
                }
            });
            
            document.getElementById('abjad-type').addEventListener('change', calculateAbjadFromInput);
            
            calculateAbjadFromInput();
            calculateReverseFromInput();
        });
    </script>
