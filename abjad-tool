        // Ø´Ù…Ø§Ø±Ø´ Ùˆ Ù…Ø±ØªØ¨â€ŒØ³Ø§Ø²ÛŒ Ú©Ø§Ø±Ø§Ú©ØªØ±Ù‡Ø§
        function countAndSortCharacters(text) {
            if (text == null) return new Map();
            const counts = new Map();
            for (const char of text) {
                if (char === ' ') continue;
                counts.set(char, (counts.get(char) || 0) + 1);
            }
            return new Map([...counts.entries()].sort((a, b) => b[1] - a[1]));
        }

        // Ù†Ù…Ø§ÛŒØ´ Ø¢Ù…Ø§Ø± Ø­Ø±ÙˆÙ
        function displayLetterStats(charStats, containerId, sourceTextId) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            if (!charStats || charStats.size === 0) return;
            
            let isFirst = true;
            let activeElement = null;
            
            charStats.forEach((count, char) => {
                const statElement = document.createElement('div');
                statElement.className = 'char-cell';
                statElement.textContent = `${char}: ${persianizeNumerals(count.toString())}`;
                
                statElement.addEventListener('click', function(event) {
                    if (activeElement) activeElement.classList.remove('background-red');
                    
                    const sourceText = document.getElementById('text-input').value;
                    const highlighted = highlightCharacter(sourceText, char);
                    document.getElementById(sourceTextId).innerHTML = highlighted;
                    
                    statElement.classList.add('background-red');
                    activeElement = statElement;
                });
                
                if (isFirst) {
                    isFirst = false;
                    statElement.classList.add('background-red');
                    activeElement = statElement;
                    const sourceText = document.getElementById('text-input').value;
                    const highlighted = highlightCharacter(sourceText, char);
                    document.getElementById(sourceTextId).innerHTML = highlighted;
                }
                
                container.appendChild(statElement);
            });
        }

        // Ø¨Ø±Ø±Ø³ÛŒ Ù†ÛŒØ§Ø² Ø¨Ù‡ Ø§Ø³Ú©Ø±ÙˆÙ„
        function checkScrollNeeded(element) {
            element.classList.remove('scrollable');
            if (element.scrollHeight > element.clientHeight) {
                element.classList.add('scrollable');
            }
        }

