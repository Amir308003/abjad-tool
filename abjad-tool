        // Ø§Ø±Ø³Ø§Ù„ Ø§Ø±ØªÙØ§Ø¹ Ø¨Ù‡ ÙˆØ§Ù„Ø¯
        function sendHeight() {
            const height = document.documentElement.scrollHeight;
            parent.postMessage({ type: 'resize', height: height }, '*');
        }

        // Ø§Ø¬Ø±Ø§ Ø¯Ø± Ø²Ù…Ø§Ù†â€ŒÙ‡Ø§ÛŒ Ù…Ø®ØªÙ„Ù
        window.addEventListener('load', sendHeight);
        window.addEventListener('resize', sendHeight);
        new ResizeObserver(sendHeight).observe(document.body);
        
        // ØªÙˆØ§Ø¨Ø¹ Ù†Ù…Ø§ÛŒØ´ ØªØ¨â€ŒÙ‡Ø§ Ùˆ Ù…Ø­Ø§Ø³Ø¨Ø§Øª Ø±Ø§ Ø§Ø² Ú©Ø¯ Ù‚Ø¨Ù„ÛŒ Ú©Ù¾ÛŒ Ú©Ù†ÛŒØ¯
        function showTab(tabId) {
            const tabs = document.querySelectorAll('.tab-content');
            const buttons = document.querySelectorAll('.tab-btn');
            tabs.forEach(tab => tab.classList.remove('active'));
            buttons.forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            document.querySelector(`[onclick="showTab('${tabId}')"]`).classList.add('active');
            document.querySelector('.abjad-type-box').style.display = tabId === 'text-to-number' ? 'block' : 'none';
            setTimeout(sendHeight, 100);
        }

        // ØªÙˆØ§Ø¨Ø¹ Ù…Ø­Ø§Ø³Ø¨Ø§ØªÛŒ Ø±Ø§ Ø§ÛŒÙ†Ø¬Ø§ Ù‚Ø±Ø§Ø± Ø¯Ù‡ÛŒØ¯ (Ø§Ø² Ú©Ø¯ Ù‚Ø¨Ù„ÛŒ)
